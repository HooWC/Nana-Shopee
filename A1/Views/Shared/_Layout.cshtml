	</section>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/Swiper/swiper-bundle.min.js"></script>
	<script src="~/js/script.js"></script>

	<script>



		var w = document.documentElement.clientWidth;
		console.log(w);

		var swiper = new Swiper(".mySwiper1", {
				slidesPerView: 3,
				spaceBetween: 30,
				slidesPerGroup: 3,
				loop: true,
				loopFillGroupWithBlank: true,
				pagination: {
					el: ".swiper-pagination",
					clickable: true,
				},
			navigation: {
				nextEl: ".swiper-button-next",
				prevEl: ".swiper-button-prev",
				},
			});

		if(document.documentElement.clientWidth <= 375){
			var swiper = new Swiper(".Myxyj",
			{
				slidesPerView: 1,
				spaceBetween: 10,
				pagination: {
					el: ".swiper-pagination",
					clickable: true,
				},
			});
		}else{
			var swiper = new Swiper(".Myxyj",
			{
				slidesPerView: 3,
				spaceBetween: 30,
				pagination: {
					el: ".swiper-pagination",
					clickable: true,
				},
			});
		}

		var swiper = new Swiper(".home_box", {
			spaceBetween: 30,
			centeredSlides: true,
			autoplay: {
				delay: 2500,
				disableOnInteraction: false,
			},
			pagination: {
				el: ".swiper-pagination",
				clickable: true,
			},
			navigation: {
				nextEl: ".swiper-button-next",
				prevEl: ".swiper-button-prev",
			},
		});


		var c = document.querySelector('.option');
		var li = c.querySelectorAll('li');

		$(function(){
		  $('.option ul li').click(function(){
			  var index = $(this).index();
			  $('.product_menu .item').eq(index).show().siblings().hide();

			  for(var j = 0 ; j < li.length; j++)
					  {
						  li[j].className= '@ViewBag.a2';
					  }
					  this.className = '@ViewBag.a2 sel';
		  })
		})


		var swiper = new Swiper(".mySwiper1", {
		slidesPerView: 3,
		spaceBetween: 30,
		slidesPerGroup: 3,
		loop: true,
		loopFillGroupWithBlank: true,
		pagination: {
		el: ".swiper-pagination",
		clickable: true,
		},
		navigation: {
		nextEl: ".swiper-button-next",
		prevEl: ".swiper-button-prev",
		},
		});

		function chooseImg(file){
			var file = file.files[0]

			var reader = new FileReader();

			reader.readAsDataURL(file);

			reader.onload = function(){
				var img = document.getElementById("img");
				img.src = this.result;
			};
		}

		let gotop = document.getElementById("gotop");


		gotop.onclick = function(){
			document.body.scrollTop = 0;
			document.documentElement.scrollTop =0;
		}

		window.onscroll = function(){
			let res = document.body.scrollTop || document.documentElement.scrollTop;
			if(res >= 1300){
				gotop.style.display = "block";
			}else{
				gotop.style.display = "none";
			}
		}

	</script>
</body>
</html>
