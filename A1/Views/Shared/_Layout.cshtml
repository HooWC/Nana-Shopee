		<nav class="navbar">
			<a id="home" asp-area="" asp-controller="MyHomePage" asp-action="Index"><i class="fa-solid fa-house"></i>Home</a>
			<a id="product" asp-area="" asp-controller="Waiting" asp-action="WaitProduct"><i class="fa-brands fa-product-hunt"></i>Product</a>
			<a id="shopping" asp-area="" asp-controller="Waiting" asp-action="WaitShoppingCart"><i class="fa-brands fa-product-hunt"></i>Shopping Cart</a>
			<a id="history" asp-area="" asp-controller="Waiting" asp-action="WaitHistory"><i class="fa-solid fa-clock-rotate-left"></i>Purchase History</a>
			<a asp-area="" asp-controller="Waiting" asp-action="WaitSetting"><i class="fa-solid fa-gears"></i>Setting</a>
		</nav>

		<nav class="login">
			@if (@ViewBag.loginchanges == "success")
			{
				<a asp-area="" asp-controller="MyHomePage" asp-action="Signoutpage" class="loginright out"><i class="fa-solid fa-right-to-bracket"></i>SIGN OUT</a>
			}
			else
			{
				<a asp-area="" asp-controller="MyHomePage" asp-action="SignUpPage"><i class="fa fa-user-circle" aria-hidden="true"></i>SIGN UP</a>
				<a asp-area="" asp-controller="MyHomePage" asp-action="LoginPage" class="loginright"><i class="fa-solid fa-right-to-bracket"></i>LOGIN</a>
			}

		</nav>

		<div id='menu-btn' class='fas fa-bars' style="color:white;"></div>
	</section>

	<div>
		<main role="main">
			<partial name="_Notification" />
			@RenderBody()
		</main>
	</div>

	<section class=' footer'>
		<div class='box-container'>
			<div class="box">
				<h3>quick links</h3>
				<a asp-area="" asp-controller="MyHomePage" asp-action="Index"><i class='fas fa-angle-right'></i>Home</a>
				<a asp-area="" asp-controller="MyHomePage" asp-action="ProductPage"><i class='fas fa-angle-right'></i>Product</a>
				<a asp-area="" asp-controller="MyHomePage" asp-action="ShoppingCart"><i class='fas fa-angle-right'></i>Shopping Cart</a>
				<a asp-area="" asp-controller="MyHomePage" asp-action="History"><i class='fas fa-angle-right'></i>Purchase History</a>
			</div>

			<div class='box'>
				<h3>Login links</h3>
				<a asp-area="" asp-controller="MyHomePage" asp-action="SignUpPage"><i class='fas fa-angle-right'></i> Sign Up</a>
				<a asp-area="" asp-controller="MyHomePage" asp-action="LoginPage"><i class='fas fa-angle-right'></i> Login</a>

			</div>

			<div class='box'>
